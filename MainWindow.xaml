<Window x:Class="FastCSVUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FastCSVUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="Load CSV File" Command="{Binding LoadCsvCommand}" />

        <DataGrid x:Name="CsvDataGrid" Grid.Row="1" ItemsSource="{Binding CsvData}" AutoGenerateColumns="True"
                  VirtualizingPanel.IsVirtualizing="True" VirtualizingPanel.VirtualizationMode="Recycling" EnableRowVirtualization="True" />

        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Text="{Binding RowCount}" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
